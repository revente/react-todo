{
  "plugins": [
    "react",
    "react-native"
  ],
  "extends": ["plugin:react/recommended"],
  "rules": {
    "react-native/split-platform-components": 2,
    "react-native/no-unused-styles": 2,
    "react/prop-types": 0,
  },
  "settings": {
    "react": {
      "pragma": "React",
    }
  },
  "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true,
      }
  },
}
